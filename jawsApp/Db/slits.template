# S1 is North, or East Jaw/slit
# S2 is South or West Jaw/slit

record (ao, "$(P)$(SLIT)$(S1):SP")
{
	field(DESC, "$(D1) Setpoint")
	field(OUT, "$(P)$(SLIT)$(S1)_SPALT.A PP MS")
	field(PREC, "3")
    info(archive, "VAL")
}
alias("$(P)$(SLIT)$(S1):SP", "$(P)$(SLIT)$(S1):SP:RBV")

